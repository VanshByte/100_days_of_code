#include <stdio.h>
#include <math.h>

int main() {
    float p, r, t;
    float si, ci, amount;

    printf("Enter Principal : ");
    scanf("%f", &p);

    printf("Enter Rate : ");
    scanf("%f", &r);

    printf("Enter Time (in years) : ");
    scanf("%f", &t);

    si = (p * r * t) / 100;

    amount = p * pow((1 + r/100), t);
    ci = amount - p;

    printf("Simple Interest = %.2f\n", si);
    printf("Compound Interest = %.2f", ci);

    return 0;
}
